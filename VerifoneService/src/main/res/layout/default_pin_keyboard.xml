<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: review/add responsiveness -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/keyboard_skin"
        android:id="@+id/keyboard"
        android:layout_height="720px"
        android:layout_width="match_parent">
        <GridLayout
            android:columnCount="3"
            android:id="@+id/gl_keyboard"
            android:layout_height="wrap_content"
            android:layout_width="525px"
            android:layout_gravity="center"
            android:rowCount="4"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="10px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/keyboard_btn1"
                android:text="1"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn2"
                android:text="2"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn3"
                android:text="3"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn4"
                android:text="4"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn5"
                android:text="5"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn6"
                android:text="6"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />

            <Button
                android:id="@+id/keyboard_btn7"
                android:text="7"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn8"
                android:text="8"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/keyboard_btn9"
                android:text="9"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />

            <Button
                style="@style/Theme.PinpadService.NoActionBar.Keyboard"/>
            <Button
                android:id="@+id/keyboard_btn0"
                android:text="0"
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
            <Button
                style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
        </GridLayout>

        <Button
            android:id="@+id/keyboard_btn_cancel"
            app:layout_constraintBottom_toTopOf="@id/keyboard_btn_delete"
            app:layout_constraintStart_toEndOf="@id/gl_keyboard"
            style="@style/Theme.PinpadService.NoActionBar.Keyboard" />

        <Button
            android:id="@+id/keyboard_btn_delete"
            app:layout_constraintBottom_toTopOf="@id/keyboard_btn_confirm"
            app:layout_constraintStart_toEndOf="@id/gl_keyboard"
            style="@style/Theme.PinpadService.NoActionBar.Keyboard" />

        <Button
            android:id="@+id/keyboard_btn_confirm"
            android:layout_height="260px"
            app:layout_constraintBottom_toBottomOf="@id/gl_keyboard"
            app:layout_constraintStart_toEndOf="@id/gl_keyboard"
            style="@style/Theme.PinpadService.NoActionBar.Keyboard" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
