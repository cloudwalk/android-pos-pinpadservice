<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:columnCount="4"
            android:id="@+id/keyboard_skin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:rowCount="5">

        <LinearLayout
                android:background="#E5E5E5"
                android:layout_height="72dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/ll_numeric_keyboard_skin">
            <TextView
                    android:background="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_clear_24"
                    android:drawablePadding="-10dp"
                    android:fontFamily="@font/ceraproregular"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:paddingLeft="20dp"
                    android:text="@string/infinitepay_cancel"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            <TextView
                    android:background="#FF0000FF"
                    android:drawableRight="@drawable/ic_check_24"
                    android:drawablePadding="-10dp"
                    android:fontFamily="@font/ceraproregular"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:paddingRight="20dp"
                    android:text="@string/infinitepay_confirm"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
                android:background="#263238"
                android:id="@+id/ll_numeric_keyboard_skin"
                android:layout_height="272dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent">

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="1"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="2"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="3"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent">

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="4"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="5"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="6"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />


            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent">

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="7"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="8"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="9"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent">

                <TextView
                        android:enabled="false"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:paddingTop="20dp"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="0"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" />

                <FrameLayout
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        style="@style/InfinitePay.Theme.NoActionBar.Keyboard" >
                    <ImageView
                            android:background="@drawable/ic_backspace_24"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
