            <Button
                android:id="@+id/default_keyboard_custom_pos13"
                android:text="0"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />

            <Button
                android:id="@+id/default_keyboard_custom_pos14"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />

            <Button
                android:id="@+id/default_keyboard_custom_pos15"
                android:text="L"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
