            android:layout_width="700px"
            android:layout_gravity="center"
            android:rowCount="4"
            android:layout_marginBottom="20px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/default_keyboard_custom_pos00"
                android:text="1"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos01"
                android:text="2"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos02"
                android:text="3"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos03"
                android:text="C"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos04"
                android:text="4"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos05"
                android:text="5"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />

            <Button
                android:id="@+id/default_keyboard_custom_pos06"
                android:text="6"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
