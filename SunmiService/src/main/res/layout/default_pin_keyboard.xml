                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos08"
                android:text="7"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos09"
                android:text="8"
                style="@style/PinpadService.Theme.NoActionBar.Keyboard" />
            <Button
                android:id="@+id/default_keyboard_custom_pos10"
